{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es6",
      "esnext.asynciterable",
      "es2017",
      "es2019"
    ],
    "resolveJsonModule": true,
    "jsx": "react",
    "outDir": "build/",
    "strict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@hocs/*": ["src/utils/hocs/*"],
      "@icons": ["src/assets/icons"],
      "@locales": ["src/locales"],
      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],
      "@styles": ["src/utils/styles"],
      "@utils/*": ["src/utils/*"]
    },
    "types": [
      "react",
      "react-native",
      "jest",
      "sinon"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true // TODO: remove this after https://github.com/invertase/react-native-firebase/issues/2614 has been fixed and released
  },
}
